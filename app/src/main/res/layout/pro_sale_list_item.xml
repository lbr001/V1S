<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pro_sale_picture"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pro_ticket_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="景区测试门票"
            android:textColor="#000000"
            android:textSize="28px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="¥"
                android:textColor="#eb6b65"
                android:textSize="24px" />

            <TextView
                android:id="@+id/pro_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_one"
                android:gravity="center"
                android:text="23"
                android:textColor="#eb6b65"
                android:textSize="36px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pro_ticket_price"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/image_jian"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pro_ticket_count"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="22"
                    android:textColor="#000000"
                    android:textSize="28px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/image_jia"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
