<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color5"
    tools:context=".helper.activity.MainActivity">

    <Button
        android:onClick="onClick"
        android:id="@+id/btn_main_product_sale"
        android:layout_width="700px"
        android:layout_height="225px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@mipmap/product_sale" />

    <Button
        android:id="@+id/btn_main_ticket_destory"
        android:layout_width="700px"
        android:layout_height="225px"
        android:layout_below="@id/btn_main_product_sale"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ticket_cancle"
        android:onClick="onClick" />

    <LinearLayout
        android:id="@+id/main_linear1"
        android:layout_width="700px"
        android:layout_height="225px"
        android:layout_below="@id/btn_main_ticket_destory"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_sale_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/history_query"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_main_refund_ticket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/refund_ticket"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_linear2"
        android:layout_width="700px"
        android:layout_height="225px"
        android:layout_below="@id/main_linear1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_market"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/market"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_main_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hdzq"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="700px"
        android:layout_height="225px"
        android:layout_below="@id/main_linear2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/settings"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_main_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/exit"
            android:onClick="onClick" />
    </LinearLayout>
</RelativeLayout>